<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pingduck" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_duck</item>
        <item name="colorPrimaryVariant">@color/pink_duck_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_beak</item>
        <item name="colorSecondaryVariant">@color/yellow_beak_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <!-- Customizing buttons, checkboxes, and other elements. -->
        <item name="colorButtonNormal">@color/pink_duck_light</item>
        <item name="android:checkboxStyle">@style/Checkbox.Pingduck</item>
        <item name="android:buttonStyle">@style/Button.Pingduck</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom styles for buttons -->
    <style name="Button.Pingduck" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/pink_duck</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom styles for checkboxes -->
    <style name="Checkbox.Pingduck" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/pink_duck</item>
    </style>
</resources>